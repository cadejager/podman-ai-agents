FROM docker.io/debian:stable-slim

# Install Software
RUN apt-get update; apt-get install -y curl git python3 pip gcc g++ gdb valgrind cmake rust-all

# Install claude-code
RUN curl -fsSL https://claude.ai/install.sh | bash

ENV ANTHROPIC_AUTH_TOKEN=ollama
ENV ANTHROPIC_API_KEY=""
ENV ANTHROPIC_BASE_URL=http://host.containers.internal:11434
WORKDIR /app

